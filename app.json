{
  "expo": {
    "name": "playgroundpal",
    "slug": "playgroundpal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "playgroundpal",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "linking": {
      "prefixes": ["playgroundpal://", "https://playgroundpal.app"],
      "config": {
        "screens": {
          "(tabs)": {
            "screens": {
              "index": "",
              "add": "add"
            }
          },
          "playground": {
            "screens": {
              "[id]": "playground/:id",
              "edit": {
                "screens": {
                  "[id]": "playground/:id/edit"
                }
              }
            }
          }
        }
      }
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
